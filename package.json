{
    "private": true,
    "type": "module",
    "scripts": {
    "serve:laravel":  "php artisan serve --host=localhost --port=8000",
    "dev:vite":       "npm --prefix resources/js run dev",
    "start:electron": "cd cliente && npm start",
    "start":          "concurrently --kill-others \"npm run serve:laravel\" \"npm run dev:vite\" \"npx wait-on http://localhost:8000 && npm run start:electron\""
    },
